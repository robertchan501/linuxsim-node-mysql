extends layouts/fullwidth

block title
  h1=title

block content
  .row
    .col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4.col-lg-4.col-lg-offset-4
      form.signup-page(method="POST" action="javascript:;")
        .form-group
          input.form-control.signup.yourname(type="text" name="yourname" placeholder="Your Name" autocomplete="off")
        .form-group
          input.form-control.signup.youremail(type="text" name="youremail" placeholder="Your Email" autocomplete="off")
        .form-group
          input.form-control.signup.yourusername(type="text" name="yourusername" placeholder="What will be your username?" autocomplete="off")
        .form-group
          input.form-control.signup.password(type="password" name="password" placeholder="Type your new account password" autocomplete="off")
        .form-group
          input.form-control.signup.confirmpassword(type="password" name="confirmpassword" placeholder="Confirm your new account password" autocomplete="off")
        .form-group.text-center
          input.btn.btn-primary.btn-submit(type="submit" name="signup" value="REGISTER!")