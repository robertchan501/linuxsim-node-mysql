extends layouts/fullwidth

block title
  h1=title

block content
  .row
    .col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4.col-lg-4.col-lg-offset-4
      form.site_login(method="POST" action="")
        .form-group
          input.form-control.login-username(type="text" name="username" placeholder="UserName / EmailAddress" autocomplete="off")
        .form-group 
          input.form-control.login-password(type="password" name="Password" placeholder="Password" autocomplete="off")
        .form-group.text-center 
          input.btn.btn-primary.btn-login(type="submit" value="Login") 
